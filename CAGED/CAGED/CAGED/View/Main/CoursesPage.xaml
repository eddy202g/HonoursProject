                                        TextColor="Black"
                                    BackgroundColor="DodgerBlue"
                                    CornerRadius="0,10,10,10"
                                    FontAttributes="Bold"
                                    BorderWidth="3"
                                    BorderColor="Black"
                                    HeightRequest="150"
                                    WidthRequest="200"
                                    ShowIcon="true"     
                                    HasShadow="True"/>
                                </StackLayout>
                                <StackLayout HeightRequest="220" BackgroundColor="Transparent" Margin="1,0,0,5">
                                    <buttons:SfButton x:Name="oneLesson1"  
                                    Text="{Binding COneLessonOneBtn}"
                                    TextColor="Black"
                                    BackgroundColor="PaleVioletRed"
                                    CornerRadius="0,10,10,10"
                                    FontAttributes="Bold"
                                    BorderWidth="3"
                                    BorderColor="Black"
                                    HeightRequest="150"
                                    WidthRequest="200"
                                    ShowIcon="true"     
                                    HasShadow="True"/>
                                </StackLayout>
                                <StackLayout HeightRequest="220" BackgroundColor="Transparent" Margin="1,0,0,5" >
                                    <buttons:SfButton x:Name="OneLesson2" 
                                    Text="{Binding COneLessonTwoBtn}"
                                    TextColor="Black"
                                    BackgroundColor="#bfeb80"
                                    CornerRadius="0,10,10,10"
                                    FontAttributes="Bold"
                                    BorderWidth="3"
                                    BorderColor="Black"
                                    HeightRequest="150"
                                    WidthRequest="200"
                                    ShowIcon="true"     
                                    HasShadow="True"/>
                                </StackLayout>
                                <StackLayout HeightRequest="220" BackgroundColor="Transparent" Margin="1,0,0,5" >
                                    <buttons:SfButton x:Name="OneLesson3"
                                    Text="{Binding COneLessonThreeBtn}"
                                    TextColor="Black"
                                    BackgroundColor="#54c1e5"
                                    CornerRadius="0,10,10,10"
                                    FontAttributes="Bold"
                                    BorderWidth="3"
                                    BorderColor="Black"
                                    HeightRequest="150"
                                    WidthRequest="200"
                                    ShowIcon="true"     
                                    HasShadow="True"/>
                                </StackLayout>
                                <StackLayout HeightRequest="220" BackgroundColor="Transparent" Margin="1,0,0,5" >
                                    <buttons:SfButton x:Name="OneLesson4" 
                                    Text="{Binding COneLessonFourBtn}"
                                    TextColor="Black"
                                    BackgroundColor="Aqua"
                                    CornerRadius="0,10,10,10"
                                    FontAttributes="Bold"
                                    BorderWidth="3"
                                    BorderColor="Black"
                                    HeightRequest="150"
                                    WidthRequest="200"
                                    ShowIcon="true"     
                                    HasShadow="True"/>
                                </StackLayout>
                                <StackLayout HeightRequest="220" BackgroundColor="Transparent" Margin="1,0,0,5" >
                                    <buttons:SfButton x:Name="OneLesson5" 
                                    Text="{Binding COneLessonFiveBtn}"
                                    TextColor="Black"
                                    BackgroundColor="Accent"
                                    CornerRadius="0,10,10,10"
                                    FontAttributes="Bold"
                                    BorderWidth="3"
                                    BorderColor="Black"
                                    HeightRequest="150"
                                    WidthRequest="200"
                                    ShowIcon="true"     
                                    HasShadow="True"/>
                                </StackLayout>
                            </StackLayout>
                        </ScrollView>
                    </Grid>
                </StackLayout>

            </Frame>
            <!--#endregion-->

            <!--#region Course Detail Popup-->
            
                <sfPopup:SfPopupLayout IsOpen="{Binding DisplayPopup}">
                    <sfPopup:SfPopupLayout.PopupView>
                        <sfPopup:PopupView HorizontalOptions="FillAndExpand"  
                                        AppearanceMode="OneButton"
                                           AcceptButtonText="Save"
                                           AcceptCommand="{Binding PopupAcceptCommand}"
                                        VerticalOptions="FillAndExpand"
                                        HeaderTitle="Modal Window"
                                        ShowFooter="true"
                                        AnimationMode="Fade">
                            <sfPopup:PopupView.ContentTemplate>
                                <DataTemplate>
                                <ScrollView BackgroundColor="Transparent">
                                    <Grid BackgroundColor="White" Padding="15,20,15,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="100"/>

                                            <RowDefinition>
                                                <RowDefinition.Height>
                                                    <OnPlatform x:TypeArguments="GridLength" Android="55" iOS="55">
                                                        <On Platform="UWP" Value="75"/>
                                                    </OnPlatform>
                                                </RowDefinition.Height>
                                            </RowDefinition>
                                        </Grid.RowDefinitions>


                                        <Grid Grid.Row="0" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout 
                                                FocusedColor="#00AFA0" 
                                                HelperText="Enter Course Title" 
                                                ContainerType="Outlined" 
                                                BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" Text="{Binding CourseOneHeader1}" BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <Grid Grid.Row="1" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout FocusedColor="#00AFA0" HelperText="Enter Course Blurb"  ContainerType="Outlined" BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" x:Name="Blurb"  Text="{Binding CourseOneBlurb}"  BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <Grid Grid.Row="2" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout FocusedColor="#00AFA0" HelperText="Enter Intro Lesson Title"  ContainerType="Outlined" BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" Text="{Binding COneIntroBtn}" BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <Grid Grid.Row="3" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout FocusedColor="#00AFA0" HelperText="Enter Lesson One Title"  ContainerType="Outlined" BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" Text="{Binding COneLessonOneBtn}" BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <Grid Grid.Row="4" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout FocusedColor="#00AFA0" HelperText="Enter Lesson Two Title"  ContainerType="Outlined" BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" Text="{Binding COneLessonTwoBtn}" BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <Grid Grid.Row="5" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout FocusedColor="#00AFA0" HelperText="Enter Lesson Three Title"  ContainerType="Outlined" BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" Text="{Binding COneLessonThreeBtn}" BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <Grid Grid.Row="6" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout FocusedColor="#00AFA0" HelperText="Enter Lesson Four Title"  ContainerType="Outlined" BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" Text="{Binding COneLessonFourBtn}" BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <Grid Grid.Row="7" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout FocusedColor="#00AFA0" HelperText="Enter Lesson Five Title"  ContainerType="Outlined" BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" Text="{Binding COneLessonFiveBtn}" BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <!--<Label Grid.Row="4" Text="To" Margin="0,10,0,0"/>
                                    <Grid Grid.Row="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <DatePicker Grid.Column="0" FontSize="Small"/>
                                        <TimePicker Grid.Column="1" FontSize="Small"/>
                                    </Grid>
                                    <Grid Grid.Row="6" Margin="0,35,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Switch Grid.Column="0"/>
                                        <Label Grid.Column="1" Text="All-day">
                                            <Label.Margin>
                                                <OnPlatform x:TypeArguments="Thickness">
                                                    <On Platform="UWP" Value="0,10,0,0"/>
                                                </OnPlatform>
                                            </Label.Margin>
                                        </Label>
                                    </Grid>-->
                                    </Grid>
            </ScrollView>
            </DataTemplate>
                            </sfPopup:PopupView.ContentTemplate>
                        </sfPopup:PopupView>
                    </sfPopup:SfPopupLayout.PopupView>
                </sfPopup:SfPopupLayout>
            
            <!--#endregion-->

            <!--#region Course Detail Update Popup-->

            <sfPopup:SfPopupLayout IsOpen="{Binding DisplayPopupTwo}">
                <sfPopup:SfPopupLayout.PopupView>
                    <sfPopup:PopupView HorizontalOptions="FillAndExpand"  
                                        AppearanceMode="OneButton"
                                           AcceptButtonText="Save"
                                           AcceptCommand="{Binding PopupUpdateCommand}"
                                        VerticalOptions="FillAndExpand"
                                        HeaderTitle="Update Course"
                                        ShowFooter="true"
                                        AnimationMode="Fade">
                        <sfPopup:PopupView.ContentTemplate>
                            <DataTemplate>
                                <ScrollView BackgroundColor="Transparent">
                                    <Grid BackgroundColor="White" Padding="15,20,15,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="100"/>
                                            <RowDefinition Height="100"/>

                                            <RowDefinition>
                                                <RowDefinition.Height>
                                                    <OnPlatform x:TypeArguments="GridLength" Android="55" iOS="55">
                                                        <On Platform="UWP" Value="75"/>
                                                    </OnPlatform>
                                                </RowDefinition.Height>
                                            </RowDefinition>
                                        </Grid.RowDefinitions>


                                        <Grid Grid.Row="0" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout 
                                                FocusedColor="#00AFA0" 
                                                Hint="Enter Course Title" 
                                                ContainerType="Outlined" 
                                                BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" Text="{Binding CourseOneHeader1}" BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <Grid Grid.Row="1" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout FocusedColor="#00AFA0" Hint="Enter Course Blurb"  ContainerType="Outlined" BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" x:Name="Blurb"  Text="{Binding CourseOneBlurb}"  BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <Grid Grid.Row="2" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout FocusedColor="#00AFA0" Hint="Enter Intro Lesson Title"  ContainerType="Outlined" BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" Text="{Binding COneIntroBtn}" BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <Grid Grid.Row="3" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout FocusedColor="#00AFA0" Hint="Enter Lesson One Title"  ContainerType="Outlined" BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" Text="{Binding COneLessonOneBtn}" BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <Grid Grid.Row="4" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout FocusedColor="#00AFA0" Hint="Enter Lesson Two Title"  ContainerType="Outlined" BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" Text="{Binding COneLessonTwoBtn}" BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <Grid Grid.Row="5" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout FocusedColor="#00AFA0" Hint="Enter Lesson Three Title"  ContainerType="Outlined" BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" Text="{Binding COneLessonThreeBtn}" BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <Grid Grid.Row="6" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout FocusedColor="#00AFA0" Hint="Enter Lesson Four Title"  ContainerType="Outlined" BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" Text="{Binding COneLessonFourBtn}" BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <Grid Grid.Row="7" BackgroundColor="Transparent" Margin="0,15,0,0">
                                            <textinput:SfTextInputLayout FocusedColor="#00AFA0" Hint="Enter Lesson Five Title"  ContainerType="Outlined" BackgroundColor="Transparent">
                                                <Entry HeightRequest="75" Text="{Binding COneLessonFiveBtn}" BackgroundColor="Transparent"/>
                                            </textinput:SfTextInputLayout>
                                        </Grid>

                                        <!--<Label Grid.Row="4" Text="To" Margin="0,10,0,0"/>
                                    <Grid Grid.Row="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <DatePicker Grid.Column="0" FontSize="Small"/>
                                        <TimePicker Grid.Column="1" FontSize="Small"/>
                                    </Grid>
                                    <Grid Grid.Row="6" Margin="0,35,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Switch Grid.Column="0"/>
                                        <Label Grid.Column="1" Text="All-day">
                                            <Label.Margin>
                                                <OnPlatform x:TypeArguments="Thickness">
                                                    <On Platform="UWP" Value="0,10,0,0"/>
                                                </OnPlatform>
                                            </Label.Margin>
                                        </Label>
                                    </Grid>-->
                                    </Grid>
                                </ScrollView>
                            </DataTemplate>
                        </sfPopup:PopupView.ContentTemplate>
                    </sfPopup:PopupView>
                </sfPopup:SfPopupLayout.PopupView>
            </sfPopup:SfPopupLayout>

            <!--#endregion-->



            <!--#region Intro Objective Popup-->
            <sfPopup:SfPopupLayout IsOpen="{Binding DisplayIntroPopup}">
                <sfPopup:SfPopupLayout.PopupView>
                    <sfPopup:PopupView HeightRequest="400"
                                       HeaderTitle="Objective"
                                       AcceptButtonText="Continue"
                                       AcceptCommand="{Binding PopupIntroCommand}"
                                       ShowFooter="true">
                        <sfPopup:PopupView.PopupStyle>
                            <sfPopup:PopupStyle HeaderBackgroundColor="#00AFA0"
                                    HeaderFontAttribute="Bold"
                                    HeaderFontFamily="Helvetica-Bold"
                                    HeaderFontSize="25"
                                    HeaderTextAlignment="Start"
                                    HeaderTextColor="White"/>
                        </sfPopup:PopupView.PopupStyle>
                        <sfPopup:PopupView.ContentTemplate>
                            <DataTemplate>
                                <StackLayout Margin="50">
                                    <Label Text="               "/>
                                    <Label Text="Learning Objective: " FontSize="Large" TextColor="Black" FontAttributes="Bold"/>
                                    <Label Text="               "/>
                                    <Label Text="               "/>
                                    <Label Text=" - Get to know the lesson layouts, and   how you will be taught  " FontSize="Medium" TextColor="Black"  />
                                   
                                    <!--\n\n - Get an idea of course content\n - Talk about the CAGED system\n - Try a simple assessment" 
                                           WidthRequest="260"
                                           BackgroundColor="White"
                                           HorizontalOptions="CenterAndExpand"/>-->
                                </StackLayout>
                            </DataTemplate>
                        </sfPopup:PopupView.ContentTemplate>
                        
                    </sfPopup:PopupView>
                </sfPopup:SfPopupLayout.PopupView>
            </sfPopup:SfPopupLayout>
            <!--#endregion-->
            
            <!--#region Button to display course details popup-->
            <StackLayout x:Name="layout" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding SetSLVisible}">
                <Button Text="+" TextColor="Gray" FontSize="Header" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="GhostWhite" BorderColor="GhostWhite" Command="{Binding SetNewCourseCommand}"/>
            </StackLayout>
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center"  IsVisible="{Binding EditCourseVisible}">
                <Button Text="Edit Course Details" Command="{Binding UpdateNewCourseCommand}"/>
            </StackLayout>
            <!--#endregion-->
        </StackLayout>
    </ScrollView>
</ContentPage>
