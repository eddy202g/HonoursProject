<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:progressBar="clr-namespace:Syncfusion.XForms.ProgressBar;assembly=Syncfusion.SfProgressBar.XForms"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             xmlns:sfPopup="clr-namespace:Syncfusion.XForms.PopupLayout;assembly=Syncfusion.SfPopupLayout.XForms"
             xmlns:textinput="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
             NavigationPage.HasBackButton="False"
             Title="        Select a Course"
             x:Class="CAGED.CoursesPage">

    <!--<ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout"
                     Command="{Binding LogoutBtnCommand}"/>
    </ContentPage.ToolbarItems>-->
    
    
    <ScrollView BackgroundColor="Transparent">
        <StackLayout x:Name="DynamicPageView" Margin="15">
            
            <!--#region Course Card One-->
            <Frame x:Name="courseOneFrame" BorderColor="Orange"
                   BackgroundColor="GhostWhite"
                    CornerRadius="10"
                    HasShadow="True"
                   HeightRequest="300"
                   Margin="2,5,2,5">
                <StackLayout HeightRequest="220" BackgroundColor="Transparent" Margin="0" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition  Width="*" />
                        </Grid.ColumnDefinitions>

                        
                        <Image Source="{Binding CardOneImage}" Grid.Row="0" Grid.Column="0"/>
                        <Label Grid.Row="0" Grid.Column="1" LineBreakMode="WordWrap" HorizontalTextAlignment="Start"  VerticalTextAlignment="Center" >
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span x:Name="introHeader1" Text="{Binding IntroHeader1}" FontAttributes="Bold" FontSize="Large" TextColor="Black"/>
                                    <!--<Span x:Name="percentageProg" Text="{Binding Progress}" FontAttributes="Bold" FontSize="Large" TextColor="Black"/>-->
                                    <!--<Span x:Name="header2" Text="{Binding Header2}" FontAttributes="Bold" FontSize="Large" TextColor="Black"/>-->

                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label Grid.Row="2" Grid.ColumnSpan="2" LineBreakMode="WordWrap" Margin="10,0,0,10">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding IntroBlurb}"  FontSize="Small"  TextColor="Black"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <!--<BoxView Color="LightGray" HeightRequest="2" Grid.Row="1" Grid.ColumnSpan="2" HorizontalOptions="Fill" Margin="6"/>-->
                        <progressBar:SfLinearProgressBar Progress="{Binding ProgressBar}" Grid.Row="1" Grid.ColumnSpan="2" HeightRequest="2" HorizontalOptions="Fill" Margin="6"/>

                        <ScrollView BackgroundColor="Transparent" Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal">
                            <StackLayout Margin="5"  Orientation="Horizontal" HeightRequest="220">
                                <StackLayout HeightRequest="220" BackgroundColor="Transparent" Margin="1,0,0,5" >
                                    <buttons:SfButton x:Name="Intro" 
                                    Text="{Binding IntroBtn}"
                                    Command="{Binding IntroLessonBtnCommand}"
                                    TextColor="Black"
                                    FontAttributes="Bold"                  
                                    BackgroundColor="Accent"
                                    CornerRadius="0,10,10,10"
                                    HeightRequest="150"
                                    WidthRequest="200"
                                    HasShadow="True"
                                    BorderWidth="3"
                                    BorderColor="Black"/>
                                </StackLayout>
                                <!--Clicked="Intro_Clicked"-->
                                <StackLayout HeightRequest="220" BackgroundColor="Transparent" Margin="1,0,0,5">
                                    <buttons:SfButton  x:Name="courseOne"  
                                    Text="{Binding LessonOneBtn}"
                                    Command="{Binding IntroLessonOneCommand}"
                                    TextColor="Black"
                                    FontAttributes="Bold"                   
                                    BackgroundColor="Aqua"
                                    CornerRadius="0,10,10,10"
                                    HeightRequest="150"
                                    WidthRequest="200"
                                    BorderWidth="3"
                                    BorderColor="Black"
                                    ShowIcon="true"     
                                    HasShadow="True"
                                    ImageSource="{Binding SetPadlockOne}"/>
                                </StackLayout>
                                <StackLayout HeightRequest="220" BackgroundColor="Transparent" Margin="1,0,0,5" >
                                    <buttons:SfButton x:Name="courseTwo" 
                                    Text="{Binding LessonTwoBtn}"
                                    Command="{Binding IntroLessonTwoCommand}"
                                    TextColor="Black"
                                    FontAttributes="Bold"                 
                                    BackgroundColor="#54c1e5"
                                    CornerRadius="0,10,10,10"
                                    HeightRequest="150"
                                    WidthRequest="200"
                                    BorderWidth="3"
                                    BorderColor="Black"
                                    ShowIcon="true"     
                                    HasShadow="True"
                                    ImageSource="{Binding SetPadlockTwo}"/>
                                </StackLayout>
                                <StackLayout HeightRequest="220" BackgroundColor="Transparent" Margin="1,0,0,5" >
                                    <buttons:SfButton x:Name="courseThree"
                                    Text="{Binding LessonThreeBtn}"
                                    Command="{Binding IntroLessonThreeCommand}"
                                    TextColor="Black"
                                    FontAttributes="Bold"
                                    BackgroundColor="#bfeb80"
                                    CornerRadius="0,10,10,10"
                                    BorderWidth="3"
                                    BorderColor="Black"
                                    HeightRequest="150"
                                    WidthRequest="200"
                                    ShowIcon="true"     
                                    HasShadow="True"
                                    ImageSource="{Binding SetPadlockThree}"/>
                                </StackLayout>
                                <StackLayout HeightRequest="220" BackgroundColor="Transparent" Margin="1,0,0,5" >
                                    <buttons:SfButton x:Name="courseFour" 
                                    Text="{Binding LessonFourBtn}"
                                    Command="{Binding IntroLessonFourCommand}"
                                    TextColor="Black"
                                    FontAttributes="Bold"
                                    BackgroundColor="PaleVioletRed"
                                    CornerRadius="0,10,10,10"
                                    BorderWidth="3"
                                    BorderColor="Black"
                                    HeightRequest="150"
                                    WidthRequest="200"
                                    ShowIcon="true"     
                                    HasShadow="True"
                                    ImageSource="{Binding SetPadlockFour}"/>
                                </StackLayout>
                                <StackLayout HeightRequest="220" BackgroundColor="Transparent" Margin="1,0,0,5" >
                                    <buttons:SfButton x:Name="courseFive" 
                                    Text="{Binding LessonFiveBtn}"
                                    Command="{Binding IntroLessonFiveCommand}"
                                    TextColor="Black"
                                    BackgroundColor="DodgerBlue"
                                    CornerRadius="0,10,10,10"
                                    FontAttributes="Bold"
                                    BorderWidth="3"
                                    BorderColor="Black"
                                    HeightRequest="150"
                                    WidthRequest="200"
                                    ShowIcon="true"     
                                    HasShadow="True"
                                    ImageSource="{Binding SetPadlockFive}"/>
                                </StackLayout>
                                <StackLayout HeightRequest="220" BackgroundColor="Transparent" Margin="1,0,0,5" >
                                    <buttons:SfButton
                                    Text="Assessment"
                                    Command="{Binding IntroAssessmentCommand}"
                                    TextColor="Black"
                                    BackgroundColor="Gainsboro"
                                    CornerRadius="0,10,10,10"
                                    FontAttributes="Bold"
                                    BorderWidth="3"
                                    BorderColor="Black"
                                    HeightRequest="150"
                                    WidthRequest="200"
                                    ShowIcon="true"     
                                    HasShadow="True"
                                    ImageSource="{Binding SetPadlockSix}"/>
                                </StackLayout>
                            </StackLayout>
                        </ScrollView>
                    </Grid>
                </StackLayout>
            </Frame>
            <!--#endregion-->

            <!--#region Course Card Two-->
            <Frame x:Name="courseTwoFrame" BorderColor="Gray"
                       BackgroundColor="GhostWhite"
                    CornerRadius="10"
                    HasShadow="True"
                   HeightRequest="300"
                   Margin="2,5,2,5"
                   IsVisible="{Binding SetNewCourseVisible}">
                <StackLayout HeightRequest="220" BackgroundColor="Transparent" Margin="0"  >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition  Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image Source="{Binding CardTwoImage}" Grid.Row="0" Grid.Column="0"/>
                        <Label Grid.Row="0" Grid.Column="1" LineBreakMode="WordWrap" HorizontalTextAlignment="Start"  VerticalTextAlignment="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span x:Name="CourseOneH1"  Text="{Binding CourseOneHeader1}" FontAttributes="Bold" FontSize="Large" TextColor="Black"/>
                                    <!--<Span x:Name="percentageProg1"  Text="{Binding Progress}" FontAttributes="Bold" FontSize="Large" TextColor="Black"/>
                                    <Span x:Name="CourseOneH2" Text="{Binding Header2}" FontAttributes="Bold" FontSize="Large" TextColor="Black"/>-->
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label Grid.Row="2" Grid.ColumnSpan="2" LineBreakMode="WordWrap" Margin="10,0,0,10">
